{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "better-dns": ["./src/index.ts"]
    },
		
    // remove later if dn2 is mapped to ts
		"allowJs": true
  },
	"include": [
    "src/**/*",
    "tests/**/*",
    "examples/**/*"
  ]
}