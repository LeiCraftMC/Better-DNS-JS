        "JavaScript",
        "TypeScript",
        "DNS"
    ],
    "homepage": "https://github.com/LeiCraftMC/Better-DNS-JS#readme",
    "devDependencies": {
        "bun": "^1.3.3",
        "@types/bun": "^1.3.3",
        "typescript": "^5.9.3",
        "@types/node": "^22.19.1"
